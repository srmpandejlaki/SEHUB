{
  "name": "sehub-plus",
  "version": "1.0.0",
  "description": "Aplikasi Pengelolaan Inventori dan Distribusi Produk L'Arbre Seho",
  "main": "electron/main.js",
  "author": "PT. Rumah Seho Nusantara",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"cd backend && npm start\" \"cd frontend && npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm ci --omit=dev",
    "build:all": "npm run build:frontend && electron-builder",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "wait-on": "^7.2.0"
  },
  "build": {
    "extends": null,
    "appId": "com.sehub.plus",
    "productName": "SEHUB+",
    "directories": {
      "output": "release"
    },
    "files": [
      "electron/**/*",
      "frontend/dist/**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/*.{ts,map}"
    ],
    "extraResources": [
      {
        "from": "backend",
        "to": "backend",
        "filter": ["**/*"]
      },
      {
        "from": "build",
        "to": "build"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.png",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "SEHUB+"
    },
    "asar": false
  }
}
